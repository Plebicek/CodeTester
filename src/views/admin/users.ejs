<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./../partials/head.ejs') %>
</head>
<body class="<%- include('./../partials/body') %>">
    <%- include("./../partials/navbar.ejs") %>
    <main class="lg:gap-11 flex items-center mx-auto lg:w-88-12 lg:mt-36 min-h-96 bg-bg-second rounded-main relative after:bg-line after:rounded-main  after:block after:absolute after:left-56 after:w-1 after:h-95per ">
        <%- include ("./../partials/scroll", {sideNav, current}) %> 

        <div class="flex flex-col w-full lg:mx-5 lg:min-h-96">
            <search class="flex lg:w-500 lg:h-11 bg-bg-third-light rounded-main lg:ml-20 lg:mt-3"/>
                <form action="/admin/dashboard/users/search" method="POST" class="flex lg:gap-2 w-full lg:px-4">
                    <img src="/images/search.svg" alt="" class="lg:w-24px">
                    <input type="text" name="user" placeholder="Vyhledat studenta podle jména" class="w-full text-main font-medium text-lg placeholder:text-gray bg-bg-third-light focus:outline-none">
                </form>
            </search>
            <div class="flex justify-between w-full lg:px-20 lg:mt-4">
                <p class="lg:text-xl font-bold text-text-second">Jméno studenta</p>
                <p class="lg:text-xl font-bold text-text-second">Ročník</p>
                <p class="lg:text-xl font-bold text-text-second">ID</p>
            </div>
            <div class="flex flex-col lg:gap-4 w-full lg:mb-5 lg:mt-5">
            <% if (users.length > 0) { %>
                <% users.forEach(user => {%>
                    <a href="" class="flex flex-col w-full h-59px">
                        <div class="flex items-center justify-between w-full h-59px lg:pl-5 lg:pr-20">
                            <div class="flex gap-5">
                                <img src="/images/user-profile.svg" alt="" class="lg:w-37.88">
                                <p class="lg:text-xl font-bold text-main-light"><%= user.user_name %></p>
                            </div>
                            <p class="lg:text-xl font-bold text-main-light"><%= user.user_job_title %></p>
                            <p class="lg:text-xl font-bold text-main-light"><%= user.user_id %></p>
                        </div>
                        <div class="w-full h-6px bg-gradient-to-r from-user-grad-from to-user-grad-to roudned-main"></div>
                    </a>
                <% }) %>
            <% } %>
            </div>
        </div>
    </main>
</body>
</html> 