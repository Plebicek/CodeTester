<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./../partials/head.ejs') %>
</head>
<body class="<%- include('./../partials/body') %>">
    <%- include("./../partials/navbar.ejs") %>
    <main class="flex items-start lg:gap-11 mx-auto lg:w-88-12 lg:mt-36 min-h-96 bg-bg-second rounded-main relative after:bg-line after:rounded-main  after:block after:absolute after:left-56 after:w-1 after:h-95per ">
        <%- include ("./../partials/scroll", {sideNav}) %>

        <div class="flex flex-col items-center w-full lg:min-h-96 lg:mt-5 lg:mb-8 lg:mr-11">
            <p class="text-center text-main text-4xl font-semibold">Seznam ukolu</p>
            <div class="flex flex-col w-full lg:mt-5">
                <% topics.forEach(topic => { %>
                <div class="flex flex-col mt-5 mb-8 gap-5">
                    <div class="flex items-center lg:w-500 bg-bg-grad-main lg:h-12 rounded-main">
                       <p class="text-4xl w-full text-center font-semibold text-white"><%= topic.topic_name %></p>
                    </div>
                    <div class="flex flex-col lg:gap-5 lg:ml-10">
                        <% topic.tasks.forEach(task => { %>
                        <% if (task.tests.length > 0) { %>
                            <a href="./tests/<%= task.tests[0].test_id %>" class="flex items-center justify-center lg:w-650 lg:h-75px rounded-main border-main-dark border-6">
                                <p class="text-center  text-main-dark lg:text-3xl font-semibold"><%= task.task_title  %></p>
                            </a>
                        <% } else { %>
                            <a href="./tests/<%= task.task_id %>" class="flex items-center justify-center lg:w-650 lg:h-75px rounded-main border-main border-6">
                                <p class="text-center  text-main lg:text-3xl font-semibold"><%= task.task_title  %></p>
                            </a>
                        <% } %>
                        <% }) %>
                    </div>
                    
                </div>
                <% }) %>
            </div>    
        </div>
    </main>
</body>
</html> 